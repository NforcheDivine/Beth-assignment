#Assignment 4 (Intermediate)
i = 1
while i <= 5: 
    j = 1
    while j <= i:  
        print("*", end="")
        j += 1
    print()  
    i += 1  

#Assignment 5 (Intermediate)
rows = 5
for i in range(1, rows + 1):
    for j in range(1, i + 1):
        print(j, end=" ")
    print()

#Assignment 1 (Advanced)
score=int(input())
if score < 0 or score > 100:
    print ("Invalid score")
elif score >= 90:
        print ("Grade A")
elif 80 <= score < 90:
        print("Grade B")
elif 70 <= score < 80:
        print("Grade C")
elif 60 <= score < 70:
        print("Grade D")
elif 0<= score < 60:
        print ("Grade F")


#Assignment 3  (Advanced)
Number=input()
Total=0
for i in Number:
    Total+=1
    print(Total)

#Assignment 4  (Advanced)
number = int(input("Enter a number: "))

while number >= 2:
    is_prime = True
    for i in range(2, int(number**0.5) + 1):
        if number % i == 0:
            is_prime = False
            break
    
    if is_prime:
        print("Prime number")
    else:
        print("Not a prime number")


