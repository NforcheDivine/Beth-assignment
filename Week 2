#Assignment 1
number = 0

if number < 0:
    print("Negative number")
elif number == 0:
    print("The number is zero")
else:
    print("Positive number")


#Assignment 2
age = int(input())  # Takes input from the user

if age < 0:
    print("Invalid input")  # Handles negative age values
elif 0 <= age <= 12:
    print("Child")  # For ages 0 to 12
elif 13 <= age <= 19:
    print("Teenager")  # For ages 13 to 19
elif 20 <= age <= 59:
    print("Adult")  # For ages 20 to 59
else:
    print("Senior")  # For ages 60 and above


#Assignment 3
score=int(input())
if score >= 90:
        print ("Grade A")
elif 80 <= score < 90:
        print("Grade B")
elif 70 <= score < 80:
        print("Grade C")
elif 60 <= score < 70:
        print("Grade D")
else:
        print ("Grade F")


