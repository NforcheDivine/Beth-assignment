#Assignment 5
Number = int(input())
while Number > 0:
    Number = Number - 1  
    print(Number)

#Assignment 1 (Intermediate)
Total = 0 
for i in range(0, 51, 2):  
    Total += i 

print("The sum of even numbers from 0 to 50 is:", Total)


#Assignment 2   (Intermediate)
import random

Correct_guess = random.randint(1, 20)  
Count = 0
max_count = 5

while Count < max_count:
    Guess = int(input())  
    Count += 1  

    if Guess == Correct_guess:
        print("Congratulations! You guessed it!")
        break  
    elif Guess < Correct_guess:
        print("Too low! Try again.")
    else:
        print("Too high! Try again.")

    if Count == max_count:
        print("Game Over!")



